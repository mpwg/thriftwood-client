# Fastlane Environment Variables
# Copy this file to .env and fill in your actual values

# Apple Developer Account
APPLE_ID=your.email@example.com
ITUNES_TEAM_ID=your_app_store_connect_team_id
APPSTORE_TEAM_ID=your_developer_portal_team_id

# App Store Connect API Key (recommended)
APP_STORE_CONNECT_API_KEY_KEY_ID=your_key_id
APP_STORE_CONNECT_API_KEY_ISSUER_ID=your_issuer_id
APP_STORE_CONNECT_API_KEY_CONTENT="-----BEGIN PRIVATE KEY-----\nYour private key content here\n-----END PRIVATE KEY-----"

# Match Configuration (for code signing)
MATCH_PASSWORD=your_certificates_repo_password

# Optional: Reduce prompts and noise
FASTLANE_SKIP_UPDATE_CHECK=1
FASTLANE_HIDE_GITHUB_ISSUES=1
FASTLANE_HIDE_CHANGELOG=1

# Optional: For CI/CD environments
# FASTLANE_DISABLE_COLORS=1
# CI=true